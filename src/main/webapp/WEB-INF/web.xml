<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>rentcar</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>resources</param-value>
  </context-param>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.locale</param-name>
    <param-value>ru</param-value>
  </context-param>
  <context-param>
    <param-name>locales</param-name>
    <param-value>locales.properties</param-value>
  </context-param>
  <context-param>
    <param-name>admin</param-name>
    <param-value>admin_user_get admin_user_edit admin_delete_user admin_change_role admin_change_lock auto_redactor edit_car change_car new_car create_car delete_car</param-value>
  </context-param>
  <context-param>
    <param-name>manager</param-name>
    <param-value>manager_menu orders_edit order_edit confirm_order reject_order arrived_cars arrived_car confirm_return</param-value>
  </context-param>
  <context-param>
    <param-name>user</param-name>
    <param-value>orders_rejected account_not_payed pay_account make_order paste_order orders_wait orders_confirmed get_order make_account paste_account my_accounts my_accounts_not_payed return_money</param-value>
  </context-param>
  <context-param>
    <param-name>unknown</param-name>
    <param-value>reg car_list login logout choose_car car_list_clear task</param-value>
  </context-param>
  <listener>
    <listener-class>ua.nure.bei.SummaryTask4.listeners.ContextListener</listener-class>
  </listener>
  <resource-ref>
    <res-ref-name>jdbc/parking_MYSQL</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>ua.nure.bei.SummaryTask4.filters.EncodingFilter</filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>UTF-8</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>AuthFilter</filter-name>
    <filter-class>ua.nure.bei.SummaryTask4.filters.AuthFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>AuthFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>BlockFilter</filter-name>
    <filter-class>ua.nure.bei.SummaryTask4.filters.BlockFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>BlockFilter</filter-name>
    <url-pattern>/Controller</url-pattern>
  </filter-mapping>
</web-app>